<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Festa"
                android:textSize="18pt"
                android:textColor="@color/colorPrimary"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6pt"
                android:text="Cadastro de nova festa"
                android:textSize="6pt"
                android:textColor="@color/colorText"
                />
        </LinearLayout>
        <View
            android:layout_marginLeft="5pt"
            android:layout_marginRight="5pt"
            android:layout_height="1dp"
            android:layout_width="match_parent"
            android:background="@color/colorText"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp">
            <android.support.design.widget.TextInputLayout
                android:layout_width="85pt"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/txtNome"
                    android:singleLine="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Título"
                    android:nextFocusDown="@id/txtData"/>
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/txtData"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Data"
                    android:inputType="date"/>
            </android.support.design.widget.TextInputLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tipo"
                android:textSize="8pt"
                android:textColor="@color/colorText"
                />

        </LinearLayout>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:layout_margin="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <RelativeLayout
                    android:id="@+id/rlFestaAniversario"
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent" >
                    <ImageView
                        android:id="@+id/selectAniversario"
                        android:layout_margin="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/cadastro_festa_aniversario"
                        android:background="@color/colorPrimary"/>
                    <View
                        android:layout_height="match_parent"
                        android:layout_width="match_parent"
                        android:background="@color/colorTransparent"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_marginEnd="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="5dp"
                        android:background="@color/colorPrimary"
                        android:gravity="center"
                        android:text="Festa de Aniversário"
                        android:textAllCaps="true"
                        android:textColor="#fff" />
                    <ImageView
                        android:id="@+id/checkAniversario"
                        android:visibility="visible"
                        android:layout_margin="50dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/check"/>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/rl15Anos"
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent" >
                    <ImageView
                        android:id="@+id/select15Anos"
                        android:layout_margin="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/cadastro_festa_15_anos"
                        android:background="@color/colorPrimary"/>
                    <View
                        android:layout_height="match_parent"
                        android:layout_width="match_parent"
                        android:background="@color/colorTransparent"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:gravity="center"
                        android:text="Festa de 15 Anos"
                        android:textAllCaps="true"
                        android:textColor="#fff"
                        android:background="@color/colorPrimary"/>
                    <ImageView
                        android:id="@+id/check15Anos"
                        android:visibility="invisible"
                        android:layout_margin="50dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/check"/>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/rlCasamento"
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent" >
                    <ImageView
                        android:id="@+id/selectCasamento"
                        android:layout_margin="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/cadastro_festa_casamento"
                        android:background="@color/colorPrimary"/>
                    <View
                        android:layout_height="match_parent"
                        android:layout_width="match_parent"
                        android:background="@color/colorTransparent"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:gravity="center"
                        android:text="Festa de Casamento"
                        android:textAllCaps="true"
                        android:textColor="#fff"
                        android:background="@color/colorPrimary"/>
                    <ImageView
                        android:id="@+id/checkCasamento"
                        android:visibility="invisible"
                        android:layout_margin="50dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/check"/>
                </RelativeLayout>
            </LinearLayout>
        </HorizontalScrollView>
        <android.support.design.widget.TextInputLayout
            android:id="@+id/rlTxtEndereco"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:visibility="visible">
            <EditText
                android:id="@+id/txtEndereco"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Endereço"
                android:textColor="@color/colorText"
                android:textSize="8pt"
                android:singleLine="true"/>
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:id="@+id/rlTxtAniversariante"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:visibility="gone">
            <EditText
                android:id="@+id/txtAniversariante"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Aniversariante"
                android:textColor="@color/colorText"
                android:textSize="8pt"
                android:singleLine="true"/>
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:id="@+id/rlTxtNoivo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:visibility="gone">
            <EditText
                android:id="@+id/txtNoivo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Noivo"
                android:textColor="@color/colorText"
                android:textSize="8pt"
                android:singleLine="true"/>
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:id="@+id/rlTxtNoiva"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:visibility="gone">
            <EditText
                android:id="@+id/txtNoiva"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Noiva"
                android:textColor="@color/colorText"
                android:textSize="8pt"
                android:singleLine="true"/>
        </android.support.design.widget.TextInputLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:gravity="center"
            >

            <Button
                android:id="@+id/btnConvidados"
                android:backgroundTint="@color/colorPrimary"
                android:textColor="#FFFFFF"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Convidados"/>
            <Button
                android:id="@+id/btnBebidas"
                android:backgroundTint="@color/colorPrimary"
                android:textColor="#FFFFFF"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bebidas"/>
            <Button
                android:id="@+id/btnComidas"
                android:backgroundTint="@color/colorPrimary"
                android:textColor="#FFFFFF"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Comidas"/>
            <Button
                android:id="@+id/btnCriarNovoEvento"
                android:backgroundTint="@color/colorPrimary"
                android:textColor="#FFFFFF"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Criar"/>
        </LinearLayout>

    </LinearLayout>
</ScrollView>