<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/guest_add"
            android:textSize="35dp" />

        <EditText
            android:id="@+id/guest_nome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:hint="Nome"
            android:inputType="text"
            android:shadowColor="@color/colorAccent">
            <requestFocus />
        </EditText>

        <EditText
            android:id="@+id/guest_cellphone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:inputType="number"
            android:hint="Telefone"
            android:shadowColor="@color/colorAccent">
        </EditText>

        <EditText
            android:id="@+id/guest_age"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:hint="Idade"
            android:inputType="number"
            android:shadowColor="@color/colorAccent"/>


        <Button
            android:id="@+id/button_ct_create_account"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@color/com_facebook_blue"
            android:text="CRIAR E CONTINUAR"
            android:textColor="@color/white" />
        <Button
            android:id="@+id/button_create_account"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@color/End"
            android:text="FINALIZAR CADASTROS"
            android:textColor="@color/white" />
    </LinearLayout>
</ScrollView>
