<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Festa"
                android:textSize="18pt"
                android:textColor="@color/colorPrimary"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cadastro de nova festa"
                android:textSize="6pt"
                android:textColor="@color/colorText"
                />
        </LinearLayout>
        <View
            android:layout_marginLeft="5pt"
            android:layout_marginRight="5pt"
            android:layout_height="1dp"
            android:layout_width="match_parent"
            android:background="@color/colorText"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nome :"
                android:textSize="8pt"
                android:textColor="@color/colorText"
                />
            <EditText
                android:id="@+id/txtNome"
                android:layout_width="100pt"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tipo :"
                android:textSize="8pt"
                android:textColor="@color/colorText"
                />

        </LinearLayout>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:layout_margin="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RelativeLayout
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent" >
                    <ImageView
                        android:id="@+id/selectAniversario"
                        android:layout_margin="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/cadastro_festa_aniversario"
                        android:background="@color/colorPrimary"/>
                    <View
                        android:layout_height="match_parent"
                        android:layout_width="match_parent"
                        android:background="@color/colorTransparent"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:gravity="center"
                        android:text="FESTA DE ANIVERSÁRIO"
                        android:textColor="#fff"
                        android:background="@color/colorPrimary"/>
                    <ImageView
                        android:id="@+id/checkAniversario"
                        android:visibility="visible"
                        android:layout_margin="50dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/check"/>
                </RelativeLayout>
                <RelativeLayout
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent" >
                    <ImageView
                        android:id="@+id/select15Anos"
                        android:layout_margin="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/cadastro_festa_15_anos"
                        android:background="@color/colorPrimary"/>
                    <View
                        android:layout_height="match_parent"
                        android:layout_width="match_parent"
                        android:background="@color/colorTransparent"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:gravity="center"
                        android:text="FESTA DE 15 ANOS"
                        android:textColor="#fff"
                        android:background="@color/colorPrimary"/>
                    <ImageView
                        android:id="@+id/check15Anos"
                        android:visibility="invisible"
                        android:layout_margin="50dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/check"/>
                </RelativeLayout>
                <RelativeLayout
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent" >
                    <ImageView
                        android:id="@+id/selectCasamento"
                        android:layout_margin="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/cadastro_festa_casamento"
                        android:background="@color/colorPrimary"/>
                    <View
                        android:layout_height="match_parent"
                        android:layout_width="match_parent"
                        android:background="@color/colorTransparent"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:gravity="center"
                        android:text="FESTA DE CASAMENTO"
                        android:textColor="#fff"
                        android:background="@color/colorPrimary"/>
                    <ImageView
                        android:id="@+id/checkCasamento"
                        android:visibility="invisible"
                        android:layout_margin="50dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/check"/>
                </RelativeLayout>
            </LinearLayout>
        </HorizontalScrollView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Aniversariante :"
                android:textSize="8pt"
                android:textColor="@color/colorText"
                />
            <EditText
                android:id="@+id/txtAniversariante"
                android:layout_width="100pt"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Noivo :"
                android:textSize="8pt"
                android:textColor="@color/colorText"
                />
            <EditText
                android:id="@+id/txtNoivo"
                android:layout_width="100pt"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Noiva :"
                android:textSize="8pt"
                android:textColor="@color/colorText"
                />
            <EditText
                android:id="@+id/txtNoiva"
                android:layout_width="100pt"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Endereço :"
                android:textColor="@color/colorText"
                android:textSize="8pt" />

            <EditText
                android:id="@+id/txtEndereco"
                android:layout_width="100pt"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:gravity="center"
            >

            <Button
                android:id="@+id/btnConvidados"
                android:backgroundTint="@color/colorPrimary"
                android:textColor="#FFFFFF"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Convidados"/>
            <Button
                android:id="@+id/btnBebidas"
                android:backgroundTint="@color/colorPrimary"
                android:textColor="#FFFFFF"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bebidas"/>
            <Button
                android:id="@+id/btnComidas"
                android:backgroundTint="@color/colorPrimary"
                android:textColor="#FFFFFF"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Comidas"/>
        </LinearLayout>

    </LinearLayout>
</ScrollView>